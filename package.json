{
  "name": "meblekp",
  "version": "1.0.0",
  "description": "Projekt strony internetowej dla firmy KP Meble zajmującą się tworzeniem mebli i zabudów meblowych pod wymiar.",
  "scripts": {
    "watch:sass": "sass src/sass/main.scss public/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass src/sass/main.scss public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/style.comp.css -o public/css/style.prefix.css",
    "compress:css": "sass public/css/style.prefix.css public/css/style.css --style=compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrpotrac/KP-Meble.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "swiper": "^8.4.2",
    "webpack": "^5.75.0"
  },
  "dependencies": {
    "live-server": "^1.2.2"
  }
}
